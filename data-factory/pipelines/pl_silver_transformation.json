{
    "name": "pl_silver_transformation",
    "type": "Microsoft.DataFactory/factories/pipelines",
    "properties": {
        "description": "Pipeline para ejecutar transformaciones en la capa Silver usando Databricks",
        "activities": [
            {
                "name": "Run Silver Notebook",
                "type": "DatabricksNotebook",
                "dependsOn": [],
                "policy": {
                    "timeout": "0.02:00:00",
                    "retry": 1,
                    "retryIntervalInSeconds": 30,
                    "secureOutput": false,
                    "secureInput": false
                },
                "typeProperties": {
                    "notebookPath": "/Shared/medallion-project/02_silver_transformation"
                },
                "linkedServiceName": {
                    "referenceName": "ls_AzureDatabricks",
                    "type": "LinkedServiceReference"
                }
            }
        ],
        "variables": {
            "execution_status": {
                "type": "String",
                "defaultValue": "pending"
            }
        },
        "annotations": [
            "medallion-project",
            "silver"
        ],
        "folder": {
            "name": "MedallionProject"
        }
    }
}
